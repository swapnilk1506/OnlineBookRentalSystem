@model IEnumerable<OnlineBookRental.Domain.Entities.Book>
@{
	ViewData["Title"] = "Manage Books";
}

<div class="container py-4">
	<div class="row pb-3">
		<div class="col-6">
			<h2 class="text-primary">Book List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Book" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle-fill"></i> &nbsp; Create New Book
			</a>
		</div>
	</div>
</div>

@if (TempData["Success"] != null)
{
	<div class="alert alert-success alert-dismissible fade show" role="alert">
		@TempData["success"]
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}

@if (Model != null && Model.Any())
{
	<table class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>Title</th>
				<th>Author</th>
				<th>ISBN</th>
				<th>Rental Price/Day</th>
				<th>Quantity Available</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model)
			{
				<tr>
				<td width="30%">@obj.Title</td>
				<td width="20%">@obj.Author</td>
				<td width="15%">@obj.ISBN</td>
				<td width="15%">@obj.RentalPricePerDay.ToString("C")</td>
				<td width="10%">@obj.QuantityAvailable</td>
				<td width="10%">
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Book" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
							<i class="bi bi-pencil-square"></i>Edit
						</a>
						<a asp-controller="Book" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
							<i class="bi bi-trash-fill"></i>Delete

						</a>

					</div>
				</td>
			</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="alert alert-info" role="alert">
		No books found. Click "Create New Book" to add Some!
	</div>
}


@section Scripts {
	<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.js"></script>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
}