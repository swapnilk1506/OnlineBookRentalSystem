@model OnlineBookRental.Domain.Entities.Book

@{
	ViewData["Title"] = "Delete Book";
}

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-danger bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Book</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row">
			<input type="hidden" asp-for="Id"/>
			<div class="border p-3">
				<div class="form-floating py-2 col-12">
					<input asp-for="Title" class="form-control border-0 shadow" disabled/>@*Diplay field is disabled*@
					<label asp-for="Title"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Author" class="form-control border-0 shadow" disabled />@*Diplay field is disabled*@
					<label asp-for="Author"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="ISBN" class="form-control border-0 shadow" disabled />@*Diplay field is disabled*@
					<label asp-for="ISBN"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Description" class="form-control border-0 shadow" disabled />@*Diplay field is disabled*@
					<label asp-for="Description"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="ImageUrl" class="form-control border-0 shadow" disabled />@*Diplay field is disabled*@
					<label asp-for="ImageUrl"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="RentalPricePerDay" class="form-control border-0 shadow" disabled />@*Diplay field is disabled*@
					<label asp-for="RentalPricePerDay"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="QuantityAvailable" class="form-control border-0 shadow" disabled />@*Diplay field is disabled*@
					<label asp-for="QuantityAvailable"></label>
				</div>

				<div class="row mt-3">
					<div class="col-12 col-md-6">
						<button type="submit" class="btn btn-danger from-control">Delete</button>
					</div>
					<div class="col-12 col-md-6">
						<a asp-controller="Book" asp-action="Index" class="btn btn-secondary border form-control">Back To List</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>