@model IEnumerable<OnlineBookRental.Domain.Entities.Book>

@{
    ViewData["Title"] = "Home Page - Online Book Rental";
}

<div class="container py-4">
    <h1 class="text-center display-4 text-primary mb-4">Welcome to Online Book Rental!</h1>
    <p class="text-center lead text-muted mb-5 mx-auto" style="max-width: 700px;">
        Explore our collection of books available for rent. This is your starting point for building a robust
        online book rental system with ASP.NET Core, Repository Pattern, and Entity Framework Core, now styled with Bootstrap.
    </p>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @if (Model != null && Model.Any())
        {
            foreach (var book in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="@book.ImageUrl" class="card-img-top" alt="Book Cover: @book.Title" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-dark mb-1 text-truncate">@book.Title</h5>
                            <p class="card-text text-muted mb-2 small">By: @book.Author</p>
                            <p class="card-text text-success fw-bold mb-1">Price: @book.RentalPricePerDay.ToString("C")/day</p>
                            <p class="card-text text-secondary mb-3 small">Available: @book.QuantityAvailable</p>
                            <div class="mt-auto">
                                <a href="#" class="btn btn-primary btn-block">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center text-muted py-5">
                <h4 class="mb-3">No books available yet.</h4>
                <p>Add some from the admin panel to see them here!</p>
            </div>
        }
    </div>
</div>