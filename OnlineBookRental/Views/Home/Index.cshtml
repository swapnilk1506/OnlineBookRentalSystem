@model IEnumerable<OnlineBookRental.Domain.Entities.Book>

@{
    ViewData["Title"] = "Home Page"; // Sets the title for the browser tab.
}

<div class="container py-4">
    <div class="row pb-3">
        <div class="col-12 text-center">
            <h1 class="display-4 text-primary">Welcome to Online Book Rental!</h1>
            <p class="lead">Discover and rent your next favorite book.</p>
        </div>
    </div>

    <!-- NEW: Search Form -->
    <div class="row mb-4 justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <form asp-controller="Home" asp-action="Index" method="get">
                <div class="input-group shadow-sm search-bar-container">
                    <!-- Added custom class for styling -->
                    <!-- Input field for the search term.
                         'name="searchString"' matches the parameter in HomeController.Index.
                         'value="@ViewData["CurrentFilter"]"' retains the search term after submission. -->
                    <input type="text" name="searchString" class="form-control" placeholder="Search by title, author, or ISBN..."
                           value="@ViewData["CurrentFilter"]" />
                    <!-- Button to submit the search form. -->
                    <button class="btn btn-primary" type="submit">
                        <i class="bi bi-search"></i> Search
                    </button>
                    <!-- Button to clear the search filter and show all books. -->
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary clear-search-btn">Clear</a> <!-- Added custom class -->
                </div>
            </form>
        </div>
    </div>
    <!-- END: Search Form -->
    @if (Model != null && Model.Any())
    {
        <!-- Grid layout for displaying books using Bootstrap's row-cols classes for responsiveness -->
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var book in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 rounded-3 overflow-hidden">
                        @* Display book image, with a fallback to a placeholder if ImageUrl is empty or null *@
                        @if (!string.IsNullOrEmpty(book.ImageUrl))
                        {
                            <img src="@book.ImageUrl" class="card-img-top" alt="Cover for @book.Title" style="height: 250px; object-fit: cover;">
                        }
                        else
                        {
                            <img src="https://placehold.co/200x250/F0F0F0/000?text=No+Image" class="card-img-top" alt="No image available" style="height: 250px; object-fit: cover;">
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-dark mb-1 text-truncate">@book.Title</h5>
                            <p class="card-text text-muted mb-2 small">By: @book.Author</p>
                            <p class="card-text text-success fw-bold mb-1">Price: @book.RentalPricePerDay.ToString("C")/day</p>
                            <p class="card-text text-secondary mb-3 small">Available: @book.QuantityAvailable</p>
                            <div class="mt-auto">
                                @* Pushes content to the bottom of the card *@
                                <!-- UPDATED: Link to the new Book Details page -->
                                <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id" class="btn btn-primary w-100 mt-2">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-5">
            <p class="text-muted">End of catalog.</p>
        </div>
    }
    else
    {
        <!-- Message displayed if no books are found (e.g., after a search with no results) -->
        <div class="alert alert-info text-center" role="alert">
            No books are available for rental at the moment or your search returned no results. Please check back later!
        </div>
    }
</div>

@section Scripts {
    <script>
        // Any custom JavaScript for the home page can be added here.
        // For example, more advanced filtering, sorting, or infinite scrolling.
    </script>
}